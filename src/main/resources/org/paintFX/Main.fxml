<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.paintFX.PaintController">
   <top>
      <VBox>
         <MenuBar>
            <Menu text="File">
               <MenuItem onAction="#onSave" text="Save" />
               <MenuItem onAction="#onExit" text="Exit" />
            </Menu>
         </MenuBar>

         <ToolBar>
            <HBox alignment="CENTER" spacing="5">
               <children>
                  <TextField fx:id="brushSize" text="18" />
                  <ColorPicker fx:id="colorPicker" />
                  <CheckBox fx:id="eraser" text="Eraser" />
                  <Button fx:id="toolPen" defaultButton="true" mnemonicParsing="false" text="Pen" />
               </children>
            </HBox>
         </ToolBar>
      </VBox>
   </top>

   <center>
      <Canvas fx:id="canvas" height="720.0" onMouseMoved="#setMouseCoordinates" onMouseReleased="#onMouseClickCanvas" width="1280.0" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <ToolBar blendMode="MULTIPLY" BorderPane.alignment="CENTER">
         <HBox alignment="CENTER" spacing="5">
            <children>
               <Label fx:id="mouseCoordinates" text="X : 0.0px    Y : 0.0px " />
            </children>
         </HBox>
      </ToolBar>
   </bottom>
   <right>
      <VBox prefHeight="720.0" prefWidth="133.0" style="-fx-border-color: black;" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="5">
               <children>
                  <Button fx:id="toolRectangle" mnemonicParsing="false" onAction="#setShapeFactoryToRectangle" text="Rectangle" />
                  <Button fx:id="toolEllipse" mnemonicParsing="false" onAction="#setShapeFactoryToCircle" text="Ellipse" />
               </children>
            </HBox>
         </children>
         <BorderPane.margin>
            <Insets right="5.0" />
         </BorderPane.margin>
      </VBox>
   </right>
</BorderPane>
