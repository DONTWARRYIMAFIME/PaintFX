<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.paintFX.PaintController">
   <top>
      <VBox>
         <MenuBar>
            <Menu text="File">
               <MenuItem onAction="#onSave" text="Save" />
               <MenuItem onAction="#onExit" text="Exit" />
            </Menu>
         </MenuBar>

         <ToolBar>
            <HBox alignment="CENTER" spacing="5">
               <TextField fx:id="brushSize" text="18" />
               <ColorPicker fx:id="colorPicker" />
               <CheckBox fx:id="eraser" text="Eraser" />
            </HBox>
         </ToolBar>
      </VBox>
   </top>

   <center>
      <Canvas fx:id="canvas" height="720.0" width="1280" />
   </center>
</BorderPane>
